{% extends 'base.html.twig' %}


{% block title %}Adresse index
{% endblock %}

{% block body %}
	<h1>Adresse index</h1>

    <label for="ville-select">Affichage par Ville:</label>
    <a class="dropdown-item" href="{{ path('adresse_index')}}">Toutes les Villes</a>
    {% for adresse in citys %}
        <a class="dropdown-item" href="{{ path('adresse_city', {'city': adresse.ville}) }}">{{adresse.ville}}</a>
    {% endfor %}

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Rue</th>
				<th>Num</th>
				<th>Code_postal</th>
				<th>Ville</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for adresse in adresses %}
				<tr>
					<td>{{ adresse.id }}</td>
					<td>{{ adresse.rue }}</td>
					<td>{{ adresse.num }}</td>
					<td>{{ adresse.codePostal }}</td>
					<td>{{ adresse.ville }}</td>
					<td>
						<a href="{{ path('adresse_show', {'id': adresse.id}) }}">show</a>
						<a href="{{ path('adresse_edit', {'id': adresse.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('adresse_new') }}">Create new</a>
{% endblock %}
